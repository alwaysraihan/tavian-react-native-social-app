{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "globals": {
    "React": "readonly"
  },
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    // "no-unused-vars": [1, { "args": "after-used", "argsIgnorePattern": "^_" }]
    "no-unused-vars": 0 // As example: Will never bug you about unused variables again
  }
}
